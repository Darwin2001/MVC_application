
<%- include('../partials/header.ejs')%>
        <div class="main-body">
                <h4>Create a new Account!</h4>
    <form action = '/user' method = 'POST'>
        <div class="forms">
            <label for="firstName" class="label-dos">First Name:</label>
            <input type="text" id="firstName" name="firstName" class="inputs" required>
            <br>
            <label for="lastName" class="label-dos">Last Name:</label>
            <input type="text" id="lastName" name="lastName" class ='inputs'required>
            <br>
            <label for="email" class="label-dos">Email Address:</label>
            <input type="email" id="email" name="email" class="inputs">
            <br>
            <label for="password" class="label-dos">Password:</label>
            <input type="password" id="password" name="password" minlength="8" class = 'inputs' required>
            <br>
            <input type="submit" value="Sign Up" class="sub-button2">    
            </div>  
    </form>

    </div>
